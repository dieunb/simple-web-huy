<div class="text-center py-5">
  <h1 class="display-5 fw-bold">Welcome to our E-commerce</h1>
  <p class="lead mt-3">Discover products, manage your orders, and enjoy shopping.</p>
  <div class="mt-4 d-flex justify-content-center gap-2">
    <a href="/products" class="btn btn-primary">Browse Products</a>
    <a href="/orders" class="btn btn-outline-secondary">View Orders</a>
  </div>
</div>

<% if defined?(current_user) && current_user %>
  <div class="alert alert-success" role="alert">
    Signed in. Enjoy your shopping!
  </div>
<% else %>
  <div class="alert alert-warning" role="alert">
    You are not signed in. <a href="/sign_in" class="alert-link">Sign in</a> or <a href="/sign_up" class="alert-link">Sign up</a>.
  </div>
<% end %>