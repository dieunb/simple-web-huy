<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Categories</h2>
    <a href="/categories/new" class="btn btn-success">New Category</a>
  </div>

  <% if @categories.any? %>
    
    <div class="row">
      <% @categories.each do |category| %>
        <div class="col-md-4 col-sm-6 mb-3">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title">
                <a href="/categories/show?id=<%= category.id %>" class="text-decoration-none">
                  <%= category.name %>
                </a>
              </h5>

              <div class="mt-2">
                <button type="button"
                  class="btn btn-sm btn-outline-danger"
                  data-bs-toggle="modal" 
                        data-bs-target="#deleteModal-<%= category.id %>">
                  Delete category
                </button>

            <div class="modal fade" id="deleteModal-<%= category.id %>" tabindex="-1" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title">Confirm Deletion</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <div class="modal-body">
                        Are you sure you want to delete <strong><%= category.name %></strong>?<br>
                        This action cannot be undone.
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

                        <form action="/categories?id=<%= category.id %>" method="POST" style="display: inline;">
                          <input type="hidden" name="_method" value="DELETE">
                          <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                        
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>


    <nav class="d-flex justify-content-center mt-3" aria-label="Pages">
      <%= pagy_bootstrap_nav(@pagy) if @pagy&.pages.to_i > 1 %>
    </nav>

  <% else %>
    
    <div class="alert alert-warning text-center py-4">
      <h4 class="mb-0">No categories found!</h4>
    </div>
    
  <% end %>
</div>