<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">
      <i class="fas fa-boxes me-2"></i>Products
    </h2>
    <a class="btn btn-success" href="/products/new">
      <i class="fas fa-plus me-1"></i>Add Product
    </a>
  </div>

  <% if @products && @products.any? %>
    <div class="card shadow-sm">
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover mb-0">
            <thead class="table-dark">
              <tr>
                <th scope="col" class="text-center">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Category</th>
                <th scope="col">Brand</th>
                <th scope="col" class="text-center">Year</th>
                <th scope="col" class="text-end">Price</th>
                <th scope="col" class="text-center">Created At</th>
              </tr>
            </thead>
            <tbody>
              <% @products.each do |p| %>
                <tr>
                  <td class="text-center">
                    <span class="badge bg-secondary"><%= p.id %></span>
                  </td>
                  <td>
                    <strong><%= p.name %></strong>
                  </td>
                  <td>
                    <% if p.category %>
                      <span class="badge bg-primary"><%= p.category.name %></span>
                    <% else %>
                      <span class="text-muted">No category</span>
                    <% end %>
                  </td>
                  <td>
                    <% if p.brand.present? %>
                      <%= p.brand %>
                    <% else %>
                      <span class="text-muted">-</span>
                    <% end %>
                  </td>
                  <td class="text-center">
                    <% if p.year.present? %>
                      <%= p.year %>
                    <% else %>
                      <span class="text-muted">-</span>
                    <% end %>
                  </td>
                  <td class="text-end">
                    <% if p.price.present? %>
                      <strong class="text-success">$<%= p.price %></strong>
                    <% else %>
                      <span class="text-muted">-</span>
                    <% end %>
                  </td>
                  <td class="text-center">
                    <small class="text-muted">
                      <%= p.created_at.strftime("%m/%d/%Y") %>
                    </small>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <% if @pagy&.pages.to_i > 1 %>
      <nav class="d-flex justify-content-center mt-4" aria-label="Products pagination">
        <%= pagy_bootstrap_nav(@pagy) %>
      </nav>
    <% end %>
    
  <% else %>
    <div class="card shadow-sm">
      <div class="card-body text-center py-5">
        <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
        <h4 class="text-muted mb-3">No products found</h4>
        <p class="text-muted mb-4">Get started by creating your first product.</p>
        <a class="btn btn-primary" href="/products/new">
          <i class="fas fa-plus me-1"></i>Create First Product
        </a>
      </div>
    </div>
  <% end %>
</div>